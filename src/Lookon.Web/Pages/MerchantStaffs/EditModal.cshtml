@page
@using Microsoft.AspNetCore.Mvc.Localization
@using LookOn.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using LookOn.MerchantUsers;
@using System.Globalization
@inject IHtmlLocalizer<LookOnResource> L
@model LookOn.Web.Pages.MerchantStaffs.EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/MerchantStaffs/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="MerchantUser.IsActive"/>

                        <abp-select asp-for="MerchantUser.AppUserId" asp-items="Model.AppUserLookupListRequired" label="@L["User"].Value"/>            <label for="Merchant_Name">@L["Merchant"] *</label>
            <div class="input-group mb-3">
                <input hidden value="@(Model.MerchantUser.MerchantId   == default ? "": Model.MerchantUser.MerchantId.ToString()
)" id="Merchant_Id" name="MerchantUser.MerchantId"/>
                <input type="text" id="Merchant_Name" class="form-control" value="@Model.Merchant?.Name" disabled>
                <abp-button button-type="Info" id="MerchantLookupOpenButton" class="text-light">@L["Pick"]</abp-button>
                <abp-button button-type="Danger" class="lookupCleanButton ms-1"><i class="fa fa-times"></i></abp-button>
            </div>

        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>