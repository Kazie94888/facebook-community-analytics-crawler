@using LookOn.Core.Consts
@using LookOn.Core.Extensions
@using LookOn.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Alert
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Card
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Grid
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.ProgressBar
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Table
@model LookOn.Dashboards.Page2.Page2Metric_ComparisionDto
@inject IHtmlLocalizer<LookOnResource> L

<abp-card>
    <abp-card-body>
        <abp-row>
            <abp-column size-md="_12" size-sm="_12">
                <div class="display-inline-bl font-size-30">@L["Page2.DashboardCustomerCompare.Title"]</div>
            </abp-column>
            <abp-column size-md="_3">
                <div class="d-block group-user">
                    <img src="~/images/icons/group-user.png" alt=""/>
                </div>
                <h3 class="mt-3">@L["Page2.DashboardCustomerCompare.UserHasPurchase"]</h3>
            </abp-column>
            <abp-column size-md="_6" class="justify-content-center">
                 @if (Model.GenderComparision is not null)
                    {
                        <abp-table striped-rows="false" class="table-top-products">
                            <tbody>
                            <tr>
                                <th colspan="4" class="text-center">@L["Page2.DashboardCustomerCompare.Gender"]</th>
                            </tr>
                            <tr>
                                <td style="width: 10%">@Model.GenderComparision.PurchaseGenderPercent.ToPositivePercent()</td>
                                <td style="min-width: 100px">
                                    <div class="progress-bar-reverse">
                                        <abp-progress-bar value="@Model.GenderComparision.PurchaseGenderPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(Model.GenderComparision.PurchaseGenderPercent, Model.GenderComparision.NonPurchaseGenderPercent)"/>
                                    </div>
                                    <div class="opacity-50">
                                        @Model.GenderComparision.PurchasedGenderName
                                    </div>
                                </td>
                                <td style="min-width: 100px">
                                    <abp-progress-bar value="@Model.GenderComparision.NonPurchaseGenderPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(Model.GenderComparision.NonPurchaseGenderPercent, Model.GenderComparision.PurchaseGenderPercent)"/>
                                    <div class="text-right opacity-50">
                                        @Model.GenderComparision.NonPurchasedGenderName
                                    </div>
                                </td>
                                <td style="width: 10%" class="text-right">
                                    @Model.GenderComparision.NonPurchaseGenderPercent.ToPositivePercent()
                                </td>
                            </tr>
                            </tbody>
                        </abp-table>
                    }
                    @if (Model.AgeComparision is not null)
                    {
                        <abp-table striped-rows="false" class="table-top-products">
                            <tbody>
                            <tr>
                                <th colspan="4" class="text-center">@L["Page2.DashboardCustomerCompare.Age"]</th>
                            </tr>
                            <tr>
                                <td style="width: 10%">@Model.AgeComparision.PurchasedAgePercent.ToPositivePercent()</td>
                                <td style="min-width: 100px">
                                    <div class="progress-bar-reverse">
                                        <abp-progress-bar value="@Model.AgeComparision.PurchasedAgePercent.ToDouble()" class="@CssConst.GetCompareProgressColor(Model.AgeComparision.PurchasedAgePercent, Model.AgeComparision.NonPurchasedAgePercent)"/>
                                    </div>
                                    <div class="opacity-50">
                                        @Model.AgeComparision.PurchasedAge
                                    </div>
                                </td>
                                <td style="min-width: 100px">
                                    <abp-progress-bar value="@Model.AgeComparision.NonPurchasedAgePercent.ToDouble()" class="@CssConst.GetCompareProgressColor(Model.AgeComparision.NonPurchasedAgePercent, Model.AgeComparision.PurchasedAgePercent)"/>
                                    <div class="text-right opacity-50">
                                        @Model.AgeComparision.NonPurchasedAge
                                    </div>
                                </td>
                                <td style="width: 10%" class="text-right">
                                    @Model.AgeComparision.NonPurchasedAgePercent.ToPositivePercent()
                                </td>
                            </tr>
                            </tbody>
                        </abp-table>
                    }
                    @if (Model.HouseOwnerComparision is not null)
                    {
                        <abp-table striped-rows="false" class="table-top-products">
                            <tbody>
                            <tr>
                                <th colspan="4" class="text-center">@L["Page2.DashboardCustomerCompare.HouseOwnerRate"]</th>
                            </tr>
                            <tr>
                                <td style="width: 10%">@Model.HouseOwnerComparision.PurchasedHouseOwnerPercent.ToPositivePercent()</td>
                                <td style="min-width: 100px">
                                    <div class="progress-bar-reverse">
                                        <abp-progress-bar value="@Model.HouseOwnerComparision.PurchasedHouseOwnerPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(Model.HouseOwnerComparision.PurchasedHouseOwnerPercent, Model.HouseOwnerComparision.NonPurchasedHouseOwnerPercent)"/>
                                    </div>
                                    <div class="opacity-50">
                                        @Model.HouseOwnerComparision.PurchasedHouseOwnerStatus
                                    </div>
                                </td>
                                <td style="min-width: 100px">
                                    <abp-progress-bar value="@Model.HouseOwnerComparision.NonPurchasedHouseOwnerPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(Model.HouseOwnerComparision.NonPurchasedHouseOwnerPercent, Model.HouseOwnerComparision.PurchasedHouseOwnerPercent)"/>
                                    <div class="text-right opacity-50">
                                        @Model.HouseOwnerComparision.NonPurchasedHouseOwnerStatus
                                    </div>
                                </td>
                                <td style="width: 10%" class="text-right">
                                    @Model.HouseOwnerComparision.NonPurchasedHouseOwnerPercent.ToPositivePercent()
                                </td>
                            </tr>
                            </tbody>
                        </abp-table>
                    }

                    @if (Model.CarOwnerComparision is not null)
                    {
                        <abp-table striped-rows="false" class="table-top-products">
                            <tbody>
                            <tr>
                                <th colspan="4" class="text-center">@L["Page2.DashboardCustomerCompare.CarOwnerRate"]</th>
                            </tr>
                            <tr>
                                <td style="width: 10%">@Model.CarOwnerComparision.PurchasedCarOwnerPercent.ToPositivePercent()</td>
                                <td style="min-width: 100px">
                                    <div class="progress-bar-reverse">
                                        <abp-progress-bar value="@Model.CarOwnerComparision.PurchasedCarOwnerPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(@Model.CarOwnerComparision.PurchasedCarOwnerPercent, @Model.CarOwnerComparision.NonPurchasedCarOwnerPercent)"/>
                                    </div>
                                    <div class="opacity-50">
                                        @Model.CarOwnerComparision.PurchasedCarOwnerStatus
                                    </div>
                                </td>
                                <td style="min-width: 100px">
                                    <abp-progress-bar value="@Model.CarOwnerComparision.NonPurchasedCarOwnerPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(@Model.CarOwnerComparision.NonPurchasedCarOwnerPercent, @Model.CarOwnerComparision.PurchasedCarOwnerPercent)"/>
                                    <div class="text-right opacity-50">
                                        @Model.CarOwnerComparision.NonPurchasedCarOwnerStatus
                                    </div>
                                </td>
                                <td style="width: 10%" class="text-right">
                                    @Model.CarOwnerComparision.NonPurchasedCarOwnerPercent.ToPositivePercent()
                                </td>
                            </tr>
                            </tbody>
                        </abp-table>
                    }
                    @if (Model.RelationshipComparision is not null)
                    {
                        <abp-table striped-rows="false" class="table-top-products">
                            <tbody>
                            <tr>
                                <th colspan="4" class="text-center">@L["Page2.DashboardCustomerCompare.RelationShip"]</th>
                            </tr>
                            <tr>
                                <td style="width: 10%">@Model.RelationshipComparision.PurchasedRelationshipPercent.ToPositivePercent()</td>
                                <td style="min-width: 100px">
                                    <div class="progress-bar-reverse">
                                        <abp-progress-bar value="@Model.RelationshipComparision.PurchasedRelationshipPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(@Model.RelationshipComparision.PurchasedRelationshipPercent, @Model.RelationshipComparision.NonPurchasedRelationshipPercent)"/>
                                    </div>
                                    <div class="opacity-50">
                                        @Model.RelationshipComparision.PurchasedRelationship
                                    </div>
                                </td>
                                <td style="min-width: 100px">
                                    <abp-progress-bar value="@Model.RelationshipComparision.NonPurchasedRelationshipPercent.ToDouble()" class="@CssConst.GetCompareProgressColor(@Model.RelationshipComparision.NonPurchasedRelationshipPercent, @Model.RelationshipComparision.PurchasedRelationshipPercent)"/>
                                    <div class="text-right opacity-50">
                                        @Model.RelationshipComparision.NonPurchasedRelationship
                                    </div>
                                </td>
                                <td style="width: 10%" class="text-right">
                                    @Model.RelationshipComparision.NonPurchasedRelationshipPercent.ToPositivePercent()
                                </td>
                            </tr>
                            </tbody>
                        </abp-table>
                    }
            </abp-column>
            <abp-column size-md="_3">
                <div class="d-block group-user text-right">
                    <img src="~/images/icons/group-user-red.png" alt=""/>
                </div>
                <h3 class="mt-3 text-right">@L["Page2.DashboardCustomerCompare.UserNoPurchase"]</h3>
            </abp-column>
        </abp-row>
    </abp-card-body>
</abp-card>