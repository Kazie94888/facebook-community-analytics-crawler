@page
@using Microsoft.AspNetCore.Mvc.Localization
@using LookOn.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using LookOn.Web.Pages.Categories
@using LookOn.Categories;
@using System.Globalization
@inject IHtmlLocalizer<LookOnResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Categories/CreateModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["NewCategory"].Value"></abp-modal-header>

        <abp-modal-body>
            
            <abp-input asp-for="Category.Name"/>

            <abp-input asp-for="Category.Code"/>

            <abp-input asp-for="Category.Description"/>

            <abp-input asp-for="Category.Order"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>