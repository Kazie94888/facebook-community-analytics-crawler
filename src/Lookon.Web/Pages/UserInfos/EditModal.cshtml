@page
@using Microsoft.AspNetCore.Mvc.Localization
@using LookOn.Localization
@using LookOn.Web.Pages.UserInfos
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using LookOn.UserInfos;
@using System.Globalization
@inject IHtmlLocalizer<LookOnResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/UserInfos/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="UserInfo.IdentificationNumber"/>

                        <label for="AppUser_UserName">@L["User"] </label>
            <div class="input-group mb-3">
                <input hidden value="@(Model.UserInfo.AppUserId  )" id="AppUser_Id" name="UserInfo.AppUserId"/>
                <input type="text" id="AppUser_UserName" class="form-control" value="@Model.AppUser?.UserName" disabled>
                <abp-button button-type="Info" id="AppUserLookupOpenButton" class="text-light">@L["Pick"]</abp-button>
                <abp-button button-type="Danger" class="lookupCleanButton ms-1"><i class="fa fa-times"></i></abp-button>
            </div>

        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>