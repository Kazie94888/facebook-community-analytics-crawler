@page
@using LookOn.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.Account.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Alert
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Blockquote
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Grid
@inject IHtmlLocalizer<AccountResource> L
@inject IHtmlLocalizer<LookOnResource> Lv
@model LookOn.Pages.Account.CustomResetPasswordConfirmationModel
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout

@{
    PageLayout.Content.Title = L["ResetPassword"].Value;
}
<div>
    <div class="card mt-3 shadow-sm rounded">
        <div class="card-body forgot-password-card">
            <abp-column>
                <h4>@Lv["ResetPasswordSuccessfully"]</h4>
            </abp-column>
            <abp-row>
                <p>@L["YourPasswordIsSuccessfullyReset"]</p>
                <a abp-button="Primary" href="@Model.InsightUrl">@L["GoToTheApplication"]</a>
            </abp-row>
        </div>
    </div>
</div>